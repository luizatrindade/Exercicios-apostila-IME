//Determinar em que dia desse mes ocorreu a maior venda e qual foi a quantidade de discos vendida nesse dia.

function disco (quantidade){
let x=0
let d=0
let f=""

for (let i=0;i<quantidade.length; i++){
  if(x > quantidade [i]){x=quantidade[i])}
  }

  
 for (let u=0;u<quantidade.length; u++){
   if (x==quantidade[i]){d=[i]}

f="O dia de maior venda foi" + i + " e quantidade de discos vendida nesse dia foi" + x
 
 }
 return f

}

